<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CardViewID">

        <RelativeLayout
            android:id="@+id/RelativeLayoutID"
            android:layout_width="270dp"
            android:layout_height="150dp"
            android:layout_marginEnd="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginStart="50dp">

            <TextView
                android:id="@+id/textViewCardAccountID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="Access for" />

            <TextView
                android:id="@+id/textViewCardUsernameID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textViewCardAccountID"
                android:layout_alignRight="@+id/textViewCardAccountID"
                android:layout_below="@+id/textViewCardAccountID"
                android:layout_marginTop="18dp"
                android:text="Username" />

            <TextView
                android:id="@+id/textViewCardPasswordID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textViewCardUsernameID"
                android:layout_alignRight="@+id/textViewCardUsernameID"
                android:layout_below="@+id/textViewCardUsernameID"
                android:layout_marginTop="19dp"
                android:text="Password" />

            <TextView
                android:id="@+id/textViewCardAccessFieldID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textViewCardAccountID"
                android:layout_alignBottom="@+id/textViewCardAccountID"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/textViewCardAccountID"
                android:layout_toRightOf="@+id/textViewCardAccountID" />

            <TextView
                android:id="@+id/textViewCardUsernameFieldID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewCardAccessFieldID"
                android:layout_alignStart="@+id/textViewCardAccessFieldID"
                android:layout_alignTop="@+id/textViewCardUsernameID" />

            <TextView
                android:id="@+id/textViewCardPasswordFieldID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewCardUsernameFieldID"
                android:layout_alignStart="@+id/textViewCardUsernameFieldID"
                android:layout_alignTop="@+id/textViewCardPasswordID" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>