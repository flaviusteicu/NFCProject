<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.flavius.nfcproject.pswindow">

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:text="Access for"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/TextView1"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/AccessID"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="89dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/TextView1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/UsernameID"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:inputType="text"
        android:singleLine="false"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/AccessID" />

    <EditText
        android:id="@+id/PasswordID"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/UsernameID" />

    <Button
        android:id="@+id/ButtonStoreID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="121dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Store credentials"
        android:onClick="SnackbarSuccess"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
